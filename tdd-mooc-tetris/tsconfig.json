{
  "compilerOptions": {
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "noEmit": false,
    "skipLibCheck": true,
    "strict": true,
    "target": "es2022",
    // My settings
    "lib": ["ES2022", "DOM"],
    "strictPropertyInitialization": true, // All the declared fields need to be initialized in the constructor
    "outDir": "./build/"
  },
  "include": ["./**/*.ts"],
  "exclude": ["./test/**/*"]
}
