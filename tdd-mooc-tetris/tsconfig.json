{
  "compilerOptions": {
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "noEmit": true,
    "skipLibCheck": true,
    "strict": true,
    "target": "es2022",
    // My settings
    "strictPropertyInitialization": true // All the declared fields need to be initialized in the constructor
  }
}
